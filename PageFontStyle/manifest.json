{
  "manifest_version": 2,

  "name": "PageFontStyle",
  "description": "This extension changes the font style in a specific page.",
  "version": "1.0",
  "icons": {
    "128": "bg128.png",
    "48": "bg48.png",
    "16": "bg16.png"
  },

  "page_action": {
    "default_icon": "bg16.png",
    "default_popup": "popup.html",
    "default_title": "PageFontStyle"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "permissions": [
    "tabs"
        ]
}
